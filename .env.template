# YNA Agentic Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# =============================================================================
# Notion API Configuration
# =============================================================================
# Get your Notion API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your_notion_api_key_here

# Notion Database IDs (get these after creating databases and sharing with integration)
NOTION_DATABASE_MARKETING=database_id_here
NOTION_DATABASE_SALES=database_id_here
NOTION_DATABASE_CUSTOMER_SERVICE=database_id_here
NOTION_DATABASE_CRM=database_id_here
NOTION_DATABASE_WEBSITE=database_id_here

# =============================================================================
# Make.com Configuration
# =============================================================================
# Get API key from Make.com Settings > API
MAKECOM_API_KEY=your_makecom_api_key_here

# Make.com Webhook URLs (create scenarios first, then add webhook URLs here)
MAKECOM_WEBHOOK_MARKETING=https://hook.make.com/your_webhook_id
MAKECOM_WEBHOOK_SALES=https://hook.make.com/your_webhook_id
MAKECOM_WEBHOOK_CUSTOMER_SERVICE=https://hook.make.com/your_webhook_id
MAKECOM_WEBHOOK_NOTION_SYNC=https://hook.make.com/your_webhook_id

# =============================================================================
# Clay Configuration
# =============================================================================
# Get API key from Clay dashboard
CLAY_API_KEY=your_clay_api_key_here
CLAY_WORKSPACE_ID=your_workspace_id_here

# =============================================================================
# Airtable Configuration
# =============================================================================
# Create a Personal Access Token: https://airtable.com/create/tokens
AIRTABLE_PAT=patXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Airtable Base IDs (found in URL: https://airtable.com/appXXXXXXXXXXXXXX)
AIRTABLE_BASE_CRM=appXXXXXXXXXXXXXX
AIRTABLE_BASE_MARKETING=appXXXXXXXXXXXXXX
AIRTABLE_BASE_SALES=appXXXXXXXXXXXXXX

# =============================================================================
# Email / SMTP Configuration
# =============================================================================
# SMTP server settings (example for Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
SMTP_FROM_NAME=YNA Agentic
SMTP_FROM_EMAIL=your-email@gmail.com

# =============================================================================
# Slack Configuration
# =============================================================================
# Create incoming webhook: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL_GENERAL=#general
SLACK_CHANNEL_ALERTS=#alerts

# =============================================================================
# Google Analytics Configuration
# =============================================================================
# Get Measurement ID from Google Analytics 4 property
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_api_secret_here

# Optional: Google Analytics reporting API credentials
GA4_PROPERTY_ID=properties/123456789
GA4_SERVICE_ACCOUNT_EMAIL=your-sa@project.iam.gserviceaccount.com

# =============================================================================
# Environment Configuration
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# =============================================================================
# Cloud Sync Configuration
# =============================================================================
# Sync frequency in minutes (default: 15)
SYNC_FREQUENCY_MINUTES=15

# Enable/disable cloud sync (true/false)
CLOUD_SYNC_ENABLED=true

# Enable/disable webhook-based sync (true/false)
WEBHOOK_SYNC_ENABLED=false
